<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.None"
    app:strokeColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="12dp">
        <!-- POST TOP SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">
            <!--  POST AUTHOR IMAGE -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/post_author_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full" />
            <!--  POST AUTHOR NAME -->
            <TextView
                android:id="@+id/post_author_name"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Author Name"
                android:textStyle="bold" />
            <!--  POST MORE ACTION -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/follow_user_btn"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Follow"
                android:textColor="?attr/colorOnSurface"
                android:visibility="gone"
                app:cornerRadius="8dp"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnSurface" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/unfollow_user_btn"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Following"
                android:textColor="?attr/colorOnSurface"
                android:visibility="gone"
                app:cornerRadius="8dp"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnSurface" />
        </LinearLayout>
        <!-- POST CONTENT -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <!-- THIS IMAGE RECYCLER VIEW IS ADJUSTED BASED ON  IMAGE HEIGHT DISPLAYED , DO NOT MODIFY -->

            <androidx.media3.ui.PlayerView
                android:id="@+id/videoPlayerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/post_content_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="350dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/post_counter"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="top|end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:background="@color/black"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="2dp"
                android:text="1/3"
                android:textColor="@color/white" />
        </RelativeLayout>
        <!-- POST ACTIONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp">

            <!--  POST LIKE ACTION -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/post_like"
                style="?attr/materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnSurface"
                app:strokeWidth="1dp" />
            <!--  POST COMMENT ACTION -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/post_comments"
                style="?attr/materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnSurface"
                app:strokeWidth="1dp" />
            <!--  POST SEND ACTION -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/post_send"
                style="?attr/materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnSurface"
                app:strokeWidth="1dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!--  POST BOOKMARK ACTION -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/post_bookmark"
                style="?attr/materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnSurface"
                app:strokeWidth="1dp" />
        </LinearLayout>
        <!--  POST LIKE COUNT -->
        <TextView
            android:id="@+id/post_like_count"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:text="0 Likes"
            android:textColor="?attr/colorOnSurface" />

        <!--  POST DESCRIPTION -->
        <TextView
            android:id="@+id/post_description"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingHorizontal="16dp"
            android:text="Post Description"
            android:textColor="?attr/colorOnSurface" />
        <!-- POST TAGS -->
        <TextView
            android:id="@+id/post_tags"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:text="Tags"
            android:textColor="#3648AC" />

        <TextView
            android:id="@+id/post_view_comments"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:text="View All Comments"
            android:textColor="?attr/colorSurfaceDim" />


        <!--  POST DATE -->
        <TextView
            android:id="@+id/post_date"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="4dp"
            android:text="posted date"
            android:textColor="?attr/colorSurfaceDim" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
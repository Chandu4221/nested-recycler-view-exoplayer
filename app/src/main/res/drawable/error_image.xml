<?xml version="1.0" encoding="utf-8"?><!-- res/drawable/error_image.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFCDD2" /> <!-- Light red -->
            <corners android:radius="8dp" /> <!-- Optional: Rounded corners -->
        </shape>
    </item>
    <!-- Centered error icon -->
    <item
        android:width="48dp"
        android:height="48dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#D32F2F" /> <!-- Dark red -->
            <size
                android:width="24dp"
                android:height="24dp" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- "X" or error symbol -->
    <item
        android:drawable="@android:drawable/ic_menu_close_clear_cancel"
        android:gravity="center"
        android:tint="#FFFFFF" /> <!-- White tint -->
</layer-list>